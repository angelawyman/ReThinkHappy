<% if current_user %>
  <ul>
    <li>Signed in as <strong> <%= current_user.name %></strong></li>
    <li><%= link_to "Logout", '/logout' %></a></li>
  </ul>
<% else %>
  <ul>
    <li><%= link_to "Login", '/login' %></a></li>
    <li><%= link_to "Signup", '/signup' %></a></li>
  </ul>
<% end %>

<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prediction</th>
      <th>Actual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.prediction %></td>
        <td><%= activity.actual %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

