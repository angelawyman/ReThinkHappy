<% if current_user %>
    <p class="logout pull-right"><%= link_to "Logout", '/logout' %></a></p>
<% else %>
  <ul>
    <li><%= link_to "Login", '/login' %></a></li>
    <li><%= link_to "Signup", '/signup' %></a></li>
  </ul>
<% end %>

<h1>Whatchoo Gonna do??</h1>

<div class="container">
  <table class="table table-hover">
      <thead>
        <tr>
          <th>Whatchoo Gonna Do?</th>
          <th>Prediction</th>
          <th>Actual</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.name %></td>
            <td><%= activity.prediction %></td>
            <td><%= activity.actual %></td>
            <td><%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-warning" %></td>
            <td><%= link_to 'X', activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  <br>

  <%= render 'form' %>
  
  <%= link_to 'New Activity', new_activity_path %>
</div>
